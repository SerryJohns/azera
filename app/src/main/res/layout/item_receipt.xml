<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:clickable="true"
    android:background="?android:selectableItemBackground">

  <android.support.v7.widget.CardView
      android:id="@+id/receipt_card"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <ImageView
          android:id="@+id/receipt_thumb"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:src="@drawable/common_full_open_on_phone"
          />
      <TextView
          android:id="@+id/txt_receipt_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toEndOf="@+id/receipt_thumb"
          android:text="Some Title"
          android:textAppearance="@style/TextAppearance.AppCompat.Medium"
          />
      <TextView
          android:id="@+id/txt_description"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/txt_receipt_name"
          android:layout_toEndOf="@id/receipt_thumb"
          android:text="Some date info"
          android:maxLines="2"
          android:textAppearance="@style/TextAppearance.AppCompat.Body1"
          />
      <TextView
          android:id="@+id/txt_date_created"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_toEndOf="@+id/receipt_thumb"
          android:text="TextView"
          android:textAppearance="@style/TextAppearance.AppCompat.Notification.Time"
          android:textAlignment="textEnd"
          />
    </RelativeLayout>

  </android.support.v7.widget.CardView>

</LinearLayout>